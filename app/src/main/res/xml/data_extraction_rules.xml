<?xml version="1.0" encoding="utf-8"?>
<!--
   Reglas de extracción de datos para Android 12+ (API 31+)
   Controla qué datos se respaldan en la nube y se transfieren entre dispositivos
-->
<data-extraction-rules>
    <!-- Respaldo en la nube -->
    <cloud-backup disableIfNoEncryptionCapabilities="true">
        <!-- ✅ Incluir base de datos -->
        <include domain="database" path="." />
        
        <!-- ❌ EXCLUIR datos sensibles -->
        <exclude domain="sharedpref" path="encrypted_prefs.xml" />
        <exclude domain="sharedpref" path="secure_prefs.xml" />
        <exclude domain="file" path="session/" />
        <exclude domain="file" path="tokens/" />
        <exclude domain="file" path="garantias/" />
        <exclude domain="cache" path="." />
        
        <!-- ✅ Incluir preferencias de app -->
        <include domain="sharedpref" path="app_preferences.xml" />
    </cloud-backup>
    
    <!-- Transferencia entre dispositivos -->
    <device-transfer>
        <!-- Solo transferir configuraciones básicas -->
        <include domain="sharedpref" path="app_preferences.xml" />
        
        <!-- NO transferir datos sensibles -->
        <exclude domain="sharedpref" path="encrypted_prefs.xml" />
        <exclude domain="sharedpref" path="secure_prefs.xml" />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
    </device-transfer>
</data-extraction-rules>