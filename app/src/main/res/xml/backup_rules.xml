<?xml version="1.0" encoding="utf-8"?>
<!--
   Reglas de respaldo automático para BsPrestagil
   Protege datos sensibles del respaldo automático de Android
-->
<full-backup-content>
    <!-- ✅ Incluir base de datos local -->
    <include domain="database" path="." />
    
    <!-- ❌ EXCLUIR datos sensibles de respaldo -->
    <!-- SharedPreferences encriptadas (credenciales biométricas) -->
    <exclude domain="sharedpref" path="encrypted_prefs.xml" />
    <exclude domain="sharedpref" path="secure_prefs.xml" />
    
    <!-- Archivos de sesión y tokens -->
    <exclude domain="file" path="session/" />
    <exclude domain="file" path="tokens/" />
    
    <!-- Fotos de garantías (pueden ser pesadas) -->
    <exclude domain="file" path="garantias/" />
    
    <!-- Cache -->
    <exclude domain="cache" path="." />
    
    <!-- ✅ Incluir configuraciones generales -->
    <include domain="sharedpref" path="app_preferences.xml" />
</full-backup-content>